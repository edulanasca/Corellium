<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="hBox" style="-fx-background-color: #1D1D1D;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Corellium.Ventana.BarraDeTituloController">
   <children>
      <ImageView onMouseClicked="#cerrarVentana" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/Ventana/red%20circle.png" />
         </image>
         <HBox.margin>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </HBox.margin>
      </ImageView>
      <ImageView onMouseClicked="#minimizarVentana" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/Ventana/yellow%20circle.png" />
         </image>
         <HBox.margin>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </HBox.margin>
      </ImageView>
      <ImageView onMouseClicked="#maximizarVentana" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/Ventana/green%20circle.png" />
         </image>
         <HBox.margin>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </HBox.margin>
      </ImageView>
   </children>
</HBox>
